		<script>
		$("#intervention_building_list").prop("hidden", true); // second dropdown is disable while first dropdown is empty
		$("#intervention_battery_list").prop("hidden", true); // second dropdown is disable while first dropdown is empty
		$("#intervention_column_list").prop("hidden", true); // second dropdown is disable while first dropdown is empty
		$("#intervention_elevator_list").prop("hidden", true); // second dropdown is disable while first dropdown is empty

		$("#intervention_customer_list").change(function(){
			var project = $(this).val();
			if(project == ''){
				$("#intervention_building_list").prop("hidden", true);
			}else{
				$("#intervention_building_list").prop("hidden", false);
			}
		});
		$("#intervention_building_list").change(function(){
			var project = $(this).val();
			if(project == ''){
				$("#intervention_battery_list").prop("hidden", true);
			}else{
				$("#intervention_battery_list").prop("hidden", false);
			}
		});
		$("#intervention_battery_list").change(function(){
			var project = $(this).val();
			if(project == ''){
				$("#intervention_column_list").prop("hidden", true);
			}else{
				$("#intervention_column_list").prop("hidden", false);
			}
		});
		$("#intervention_column_list").change(function(){
			var project = $(this).val();
			if(project == ''){
				$("#intervention_elevator_list").prop("hidden", true);
			}else{
				$("#intervention_elevator_list").prop("hidden", false);
			}
		});
