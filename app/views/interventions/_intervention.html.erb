			<!-- PRICE CALCULATOR -->
			<div class="container pt-30 pb-30" id="elevator-calculator">
				<div class="row">
					<div class="col-md-8">
						<%= form_with(model: intervention, local: true) do |f| %>
							<% if intervention.errors.any? %>
								<div id="error_explanation">
								<h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

								<ul>
								<% intervention.errors.full_messages.each do |message| %>
									<li><%= message %></li>
								<% end %>
								</ul>
								</div>
							<% end %>

							<div class="table-responsive p-20 fs-16">
								<table class="table table-bordered table-vertical-middle">
									<tbody>
										<tr>
											<td><%= f.label :customer_list, "Company Name" %></td>
											<td><%= f.collection_select :customer_list, Customer.order(:company_name), :id, :company_name, include_blank: true %></td>
										</tr>
									</tbody>
									<tbody>
										<tr>
											<td><%= f.label :building_list, "Building Address" %></td>
											<td><%= f.grouped_collection_select :building_list, Customer.order(:company_name), :buildings, :company_name, :id, :address_of_the_building, include_blank: true %></td>
										</tr>
									</tbody>
									<tbody>
										<tr>
											<td><%= f.label :battery_list, "Battery ID" %></td>
											<td><%= f.grouped_collection_select :battery_list, Building.order(:address_of_the_building), :batteries, :address_of_the_building, :id, :id, include_blank: true %></td>
										</tr>
									</tbody>
									<tbody>
										<tr>
											<td><%= f.label :column_list, "Column ID" %></td>
											<td><%= f.collection_select :column_list, Column.order(:id), :id, :id, include_blank: true %></td>
										</tr>
									</tbody>
									<tbody>
										<tr>
											<td><%= f.label :elevator_list, "Elevator ID" %></td>
											<td><%= f.collection_select :elevator_list, Elevator.order(:id), :id, :id, include_blank: true %></td>
										</tr>
									</tbody>
									<tbody>
										<tr>
											<td><%= f.label :employee_list, "Employee Name" %></td>
											<td><%= f.collection_select :employee_list, Employee.order(:id), :id, :first_name, include_blank: true %></td>
										</tr>
									</tbody>
									<tbody>
										<tr>
											<td><label class="fs-16">Description</label></td>
											<td><%= f.text_area :message, :type => 'text', :size => "60x8"%></td>
										</tr>
									</tbody>
								</table>
							</div>
							<div class="actions">
								<% f.submit %>
								<button type="submit" class="btn btn-red">SUBMIT</button>
							</div>
						<% end %>
					</div>
				</div>
