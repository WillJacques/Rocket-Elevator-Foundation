<%= form_with(model: lead, local: true) do |f| %>
  <% if lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% lead.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- CONTACT -->
<section id="contact">
	<div class="container">

		<header class="text-center mb-60">
			<h2>Contact Us</h2>
			<p class="lead font-lato">We'll be glad to answer any of your questions.</p>
			<hr />
		</header>


		<div class="row">

			<!-- FORM -->
			<div class="col-md-8 col-sm-8">

				<h3>Drop us a line or just say <strong><em>Hello!</em></strong></h3>

				<!-- Alert Success -->
				<div id="alert_success" class="alert alert-success mb-30">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>Thank You!</strong> Your message successfully sent!
				</div><!-- /Alert Success -->


				<!-- Alert Failed -->
				<div id="alert_failed" class="alert alert-danger mb-30">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>[SMTP] Error!</strong> Internal server error!
				</div><!-- /Alert Failed -->


				<!-- Alert Mandatory -->
				<div id="alert_mandatory" class="alert alert-danger mb-30">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>Sorry!</strong> You need to complete all mandatory (*) fields!
				</div><!-- /Alert Mandatory -->


				<form action="php/contact.php" method="post" enctype="multipart/form-data">
					<fieldset>
						<input type="hidden" name="action" value="contact_send" />

						<div class="row">
							<div class="col-md-4">
								<div class="field">
								<%= f.label :full_name, 'Full Name'  %>
								<%= f.text_field :full_name, :type => 'text' %>
								</div>
							</div>
							<div class="col-md-4">
								<div class="field">
								<%= f.label :email, 'E-mail Address'  %>
								<%= f.text_field :email, :type => 'text' %>
								</div>
							</div>
							<div class="col-md-4">
								<div class="field">
								<%= f.label :phone, 'Phone' %>
								<%= f.text_field :phone, :type => 'text' %>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-4">
								<div class="field">
								<%= f.label :compagny_name, 'Entreprise Name' %>
								<%= f.text_field :compagny_name, :type => 'text' %>
								</div>
							</div>
							<div class="col-md-4">
								<div class="field">
								<%= f.label :project_name, 'Project Name' %>
								<%= f.text_field :project_name, :type => 'text' %>
								</div>
							</div>
							<div class="col-md-4">
								<div class="field">
									<label class="fs-16">Department</label>
									<%= f.select :dep_in_charge, ['---Select---', 'Residential', 'Commercial', 'Corporate', 'Hybrid']%>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="field">
									<%= f.label :project_description, 'Project Description' %>
									<%= f.text_field :project_description, :type => 'text', :size => "80" %>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form control">
								<%= f.label :message, 'Message' %>
								<%= f.text_area :message, :type => 'text', :size => "80x8"%>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="field">
								<%= f.label :attached_file, 'File Attachment' %>
								<%= f.file_field :attached_file %>
								</div>
							</div>
						</div>
						<div class="field">
							<%= f.hidden_field :date_contact_request %>
						</div>

					</fieldset>
	
					<% f.submit %>
					<button type="submit" class="btn btn-primary">SEND MESSAGE</button>
				</form>

			</div>
			<!-- /FORM -->
			<% end %>

			<!-- INFO -->
			<div class="col-md-4 col-sm-4">

				<h2>Visit Us</h2>
				<div id="map2" class="h-400">
					<iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" id="gmap_canvas" src="https://maps.google.com/maps?width=520&amp;height=400&amp;hl=en&amp;q=725%20Boulevard%20Lebourgneuf%20+()&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
				</div>
				<br />
				<p>
					<span class="block"><strong><i class="fa fa-map-marker"></i> Address:</strong> 418-725 Boulevard Lebourgneuf, Qu√©bec, QC G2J 0C4, Canada</span>
					<span class="block"><strong><i class="fa fa-phone"></i> Phone:</strong> <a href="tel:1800-555-1234">(581) 701-0303</a></span>
					<span class="block"><strong><i class="fa fa-envelope"></i> Email:</strong> <a href="mailto:mail@yourdomain.com">info@codebox.biz</a></span>
				</p>
				

			</div>
			<!-- /INFO -->

		</div>

	</div>
</section>
<!-- /CONTACT -->


